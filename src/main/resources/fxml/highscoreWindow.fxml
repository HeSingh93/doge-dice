<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane id="highscoreWindow"
            stylesheets="@/css/highscoreWindow.css"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.dogedice.controllers.HighscoreWindow">
  <padding>
    <Insets bottom="5"
            top="5"
            left="5"
            right="5"/>
  </padding>

  <top>
    <Group>
      <ImageView layoutX="205"
                 fitHeight="170"
                 fitWidth="250">

        <Image url="@/images/Highscore.png"/>
      </ImageView>

      <Label layoutY="140" layoutX="260">
        Wow Such Score
      </Label>

      <ImageView id ="coolDoge"
                 layoutY="95"
                 layoutX="385"
                 fitHeight="60"
                 fitWidth="60"/>
    </Group>
  </top>

  <center>
    <Group>

      <ImageView id ="rectangle"
                 fitHeight="100"
                 fitWidth="250"/>
      <Label layoutX="70">
      1.TopDoge
      </Label>

      <ImageView id ="rectangle"
                 layoutY="62"
                 fitHeight="100"
                 fitWidth="250"/>

      <Label layoutY="60" layoutX="55">
      2.Last TopDoge
      </Label>


      <ImageView id ="rectangle"
                 layoutY="123"
                 fitHeight="100"
                 fitWidth="250" />

      <ImageView id ="backIcon"
                 layoutY="185"
                 fitHeight="40"
                 fitWidth="40"/>

      <ImageView id="spinningDoge"
                 layoutY="175"
                 layoutX="185"
                 preserveRatio="true"
                 fitWidth="65"
                 fitHeight="65"
                 onMouseClicked="#spinningDogeClicked" />

      <ImageView id="sadDoge"
                 layoutY="130"
                 layoutX="20"
                 fitHeight="50"
                 fitWidth="50"
                 rotate="340"/>

      <Label layoutY="122"
             layoutX="55">
        3.Much SadDoge
      </Label>

    </Group>
  </center>

</BorderPane>
