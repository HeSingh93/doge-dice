<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>

<?import javafx.scene.shape.Box?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.SVGPath?>
<VBox id="playWindow"
      xmlns="http://javafx.com/javafx"
      stylesheets="@/css/playWindow.css"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.dogedice.controllers.PlayWindow">

  <Label id="header"
         text="GAME"/>

  <HBox styleClass="scrollPane">
    <ScrollPane fx:id="playerPane"/>
    <VBox>

    </VBox>
  </HBox>

  <VBox styleClass="modifiers" spacing="10" >
    <ImageView id="dieTwenty"
               preserveRatio="true"
               fitWidth="30"/>

    <ImageView id="dieSix"
               preserveRatio="true"
               fitWidth="30"/>


    <SVGPath id="modifierLogo" content="M 450 250 L 500 200 L 550 250 L 500 300 L 450 250 " fill="transparent" strokeWidth="5" stroke="black"/>
    <Label id="modifierLabel" text="+1"/>


  </VBox>

  <VBox styleClass="side2">

  </VBox>

  <VBox styleClass="bot">
    <Button id="rollButton"
            text="ROLL"/>


  <ImageView id="backIcon"
             preserveRatio="true"
             fitWidth="40"
             onMouseClicked="#backIconClicked"/>


    <ImageView id="spinningDoge"
             preserveRatio="true"
             fitWidth="40"/>


  </VBox>



</VBox>